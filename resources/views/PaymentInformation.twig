<hr>
<div>
    {% if payment.status == 1 and (transaction.state == 'AUTHORIZED' or transaction.state == 'COMPLETED' or transaction.state == 'FULFILL') %}
    	<p>{{ trans("trustPayments::Template.paymentInformationLabel") }}</p>
    {% endif %}
    
    {% if transaction.state == 'FULFILL' %}
    	{% if downloadInvoice %}<p><a href="/trustpayments/download-invoice/{{ transaction.id }}">{{ trans("trustPayments::Template.paymentInformationDownloadInvoice") }}</a></p>{% endif %}
    	{% if downloadPackingSlip %}<p><a href="/trustpayments/download-packing-slip/{{ transaction.id }}">{{ trans("trustPayments::Template.paymentInformationDownloadPackingSlip") }}</a></p>{% endif %}
    {% endif %}
</div>